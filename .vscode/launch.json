{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug pmt",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pmt",
            "args": ["-e", "../gameengine/engine.json"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "preLaunchTask": "g++ via pmt"
          }
    ]
}